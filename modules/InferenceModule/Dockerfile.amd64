# FROM mcr.microsoft.com/azureml/onnxruntime:latest-openvino-myriad
FROM wopaulionnx.azurecr.io/onnxruntime:latest

ENV DEBIAN_FRONTEND=noninteractive

WORKDIR /app

RUN apt-get update && \
    apt-get install libssl-dev libffi-dev libgtk2.0-dev python3-pip --yes

RUN pip install --upgrade pip
 
RUN pip install azure-storage && \
    pip install flask opencv-python && \
    pip install pytz

# Expose the port
EXPOSE 5000

COPY TinyYOLO.onnx .
COPY inference.py .
COPY main.py .
COPY labels.txt .

ENTRYPOINT [ "python", "-u", "./main.py" ]